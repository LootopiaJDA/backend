generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  ADMIN
  PARTENAIRE
  JOUEUR
}

enum Statut {
  VERIFICATION
  ACTIVE
  INACTIVE
}

model User {
  id_user     Int      @id @default(autoincrement())
  username    String 
  role        Role[] 
  password    String 
  email       String   @unique
  created_at  DateTime @default(now())
  updated_at  DateTime @default(now())

  partenaire Partenaire?
}

model Partenaire {
  id_partenaire Int      @id @default(autoincrement())
  statut        Statut  @default(VERIFICATION) 
  siret         String   @unique
  company_name  String
  adresse       String?   
  created_at    DateTime @default(now())
  updated_at    DateTime @default(now())

  user User @relation(fields: [userId], references: [id_user])
  userId Int @unique

  chasses Chasse[]
}

model Chasse {
  id_chasse    Int     @id @default(autoincrement())
  name         String
  localisation String
  id_partenaire Int 
  lat          String 
  long         String 
  created_at   DateTime @default(now())

  partenaire Partenaire @relation(fields: [idPartenaire], references: [id_partenaire])
  idPartenaire Int @unique
  indices Indice[]
}

model Indice {
  id           Int     @id @default(autoincrement())
  chasse_id    Int     
  name         String
  lat          String
  long         String
  address      String
  description  String
  created_at   DateTime @default(now())

  chasse Chasse @relation(fields: [chasse_id], references: [id_chasse])
}