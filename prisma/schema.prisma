generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  ADMIN
  PARTENAIRE
  JOUEUR
}

model User {
  id_user     Int      @id @default(autoincrement())
  username    String 
  role        Role[] 
  password    String 
  email       String   @unique
  created_at  DateTime @default(now())
  updated_at  DateTime @default(now())

  partenaire Partenaire?
}

model Partenaire {
  id_partenaire Int      @id @default(autoincrement())
  statut        String 
  siret         String   @unique
  company_name  String
  adresse       String?
  created_at    DateTime @default(now())
  updated_at    DateTime @default(now())

  user User @relation(fields: [userId], references: [id_user])
  userId Int @unique
}

model Chasse {
  id           Int [primary key]
  name         String
  localisation String
  id_partenaire Int [not null]
  lat          String [not null]
  long         String [not null]
  created_at   DateTime @default(now())
}
